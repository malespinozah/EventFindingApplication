@model EventFindingApplication.Models.EventDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Event</h2>

<form action="/Event/Update/@Model.EventId" method="post">
    <div style="display:none;">
        @* Pass through the Event ID *@
        <input type="text" name="EventId" value="@Model.EventId" />
    </div>
    <div>
        <label>Event Name:</label>
        <input type="text" name="EventName" value="@Model.EventName" />
    </div>
    <div>
        <label>Event Description:</label>
        <input type="text" name="EventDescription" value="@Model.EventDescription" />
    </div>
    <div>
        <label>Event Date:</label>
        <input type="date" name="EventDate" value="@Model.EventDate.ToString("yyyy-MM-dd")" />
    </div>
    <div>
        <label>Event Time:</label>
        <input type="time" name="EventTime" value="@Model.EventDate.ToString("HH:mm")" />
    </div>
    <div>
        <label>Event Price:</label>
        <input type="number" name="EventPrice" value="@Model.EventPrice" step="0.1" />
    </div>
    <div>
        <label>Event Address: </label>
        <input type="text" name="EventAddress" value="@Model.EventAddress" />
    </div>
    <div>
        <label for="CityId">City Id: </label>
        <select id="CityId" name="CityId">
            <option value="@Model.CityId"></option>
            <option value="1">Etobicoke</option>
            <option value="2">Scarborough</option>
            <option value="3">York</option>
            <option value="4">North York</option>
            <option value="5">East York</option>
            <option value="6">Old Toronto</option>
            <option value="7">Vaughan</option>
            <option value="8">Mississauga</option>
            <option value="9">Richmond</option>
            <option value="10">Brampton</option>
            <option value="11">Pickering</option>
            <option value="12">Oakville</option>
            <option value="13">Ajax</option>
            <option value="14">Whitchurch-Stouffville</option>
            <option value="15">Bolton</option>
            <option value="16">Aurora</option>
            <option value="17">Milton</option>
            <option value="18">Georgetown</option>
        </select>
    </div>
    <div>
        <input type="submit" value="Update Event" />
    </div>
</form>